<div class="row" style="margin-top: 10px">
<div class="col"></div>

<div class="col-md-12">
	<% if current_user.articles.length == 0 %>
<h1  class="text-center"style="color:red"> You Have No Articles ! <br>
 <%= link_to 'Write Article' , new_article_path,class:'btn btn-lg btn-warning' %></h1>

<% else%>

<table class="table table-hover">
	<thead>
		<tr>
			<th>Article</th>
			  	<th>article</th>

			<th colspan="3"> options</th>
		</tr>
	</thead>
	<tbody>
		<

		<% current_user.articles.each do |article|%>

		<tr>
			<td><%= article.title %></td>
			  <td><%= truncate(article.body,length:50)%></td>
 <td><%= link_to 'Read' ,article_path(article.id),class:'btn btn-sm btn-warning'%></td>
 <td><%= link_to 'Edit' ,edit_article_path(article.id),class:'btn btn-sm btn-warning'%></td>
   <td><%= link_to 'Delete',article_path(article.id),method: :Delete,data:{confirm:'are you sure?'},class:'btn btn-sm btn-danger'%></td>
		</tr>
		<% end%>

	</tbody>

</table>
<%end%>
<div>

<div class="col"></div>

</div>